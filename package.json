  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "build": "tsup src/server.ts --format cjs --clean",
    "start": "node -r dotenv/config dist/server.js",
    "lint": "eslint --ext .ts .",
    "directus": "docker compose -f ./directus/docker-compose.yml up --build -d",
    "directus:stop": "docker compose -f ./directus/docker-compose.yml down",
    "directus:restart": "docker compose -f ./directus/docker-compose.yml restart",
    "directus:snapshot": "docker compose -f ./directus/docker-compose.yml exec directus npx directus schema apply --yes ./snapshot.yaml",
    "prod": "npm ci && npm run build && npm ci --omit=dev && docker compose up --build -d"
  },
